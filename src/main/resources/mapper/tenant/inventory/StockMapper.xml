<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.multi.y2k4.mapper.tenant.inventory.StockMapper">
    <select id="list_all" resultType="com.multi.y2k4.vo.inventory.Stock">
        select * from stock
    </select>

    <select id="list" resultType="com.multi.y2k4.vo.inventory.Stock">
        select * from stock
        <where>
            <if test="stock_name !=null">
                stock_name = #{stock_name}
            </if>
            <if test="qty !=null">
                qty = #{qty}
            </if>
            <if test="unit_price !=null">
                unit_price = #{unit_price}
            </if>
            <if test="location!=null">
                location = #{location}
            </if>
            <if test="type!=null">
                type = #{type}
            </if>
        </where>
    </select>

    <insert id="addStock" parameterType="com.multi.y2k4.vo.inventory.Stock" useGeneratedKeys="true" keyProperty="stock_id" keyColumn="stock_id">
        insert into stock (stock_name, qty, unit_price, location, type)
        values (#{stock_name}, #{qty}, #{unit_price}, #{location}, #{type})
    </insert>

    <update id="updateStock" parameterType="com.multi.y2k4.vo.inventory.Stock">
        UPDATE stock
        <set>
            <if test="stock_name  != null"> stock_name  = #{stock_name},  </if>
            <if test="qty        != null"> qty         = #{qty},        </if>
            <if test="unit_price  != null"> unit_price  = #{unit_price},  </if>
            <if test="location   != null"> location    = #{location},   </if>
            <if test="type       != null"> type        = #{type},       </if>
        </set>
        WHERE stock_id = #{stock_id}
    </update>
</mapper>